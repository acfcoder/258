{ "extends": ["stylelint-config-standard", "stylelint-config-standard-scss", "stylelint-config-html", "stylelint-config-recess-order"], 
"rules": {
        "block-no-empty": null,
        "declaration-property-unit-allowed-list": {
            "/^border/^": ["px"],
            "/^padding|^gap": ["em"]
        },
        "unit-allowed-list": ["%", "deg", "px", "rem", "vh", "em"],
        "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$"
    }
}
